# Environment Configuration (Backend)

# App
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/course_management_system

# Redis (optional but recommended)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Elasticsearch (optional)
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# JWT Auth
JWT_SECRET=change_me_to_a_strong_secret
JWT_EXPIRE=7d

# Microservice Ports
AUTH_SERVICE_PORT=3001
COURSE_SERVICE_PORT=3002
AI_SERVICE_PORT=3003

# Microservice URLs (used by API Gateway)
AUTH_SERVICE_URL=http://localhost:3001
COURSE_SERVICE_URL=http://localhost:3002
AI_SERVICE_URL=http://localhost:3003

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=300

# AI (Gemini) - mocked by default in code
GEMINI_API_KEY=
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta

# File Uploads
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
